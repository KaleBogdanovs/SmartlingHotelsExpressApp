<div class="container">
    <div class="row" style="">
        <form class="text-center form-inline" role="form">
            <div class="form-group">
                <select class="form-control" id="selector" style="max-width: fit-content;" required>
                    <% for(var i = 0; i < locations.length; i++){ %>
                        <% if (i === 0) { %>
                            <option selected disabled invalid><%= gt.gettext('Please input your location.') %></option>
                        <% } else { %>
                            <option value="<%= locations[i].link %>"><%= locations[i].txt %></option>
                        <% } %>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <a id="findHotels" class="btn btn-primary" href="" role="button"><%= gt.gettext('Find Hotels') %></a>
            </div>
            <div class="form-group">
                <a id="reviseSearch" class="btn btn-primary" href="/browse"
                   role="button"><%= gt.gettext('Revise Search') %></a></div>
            <div class="form-group">
                <a id="returnToSearch" class="btn btn-primary" href="/browse/<%= hotel.prevLink %>"
                   role="button"><%= gt.gettext('Return to Search') %></a>
            </div>
        </form>
    </div>
</div>

<br>
